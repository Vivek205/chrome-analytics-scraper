{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "globalTypes/**/*"],
  "exclude": ["node_modules"]
}
