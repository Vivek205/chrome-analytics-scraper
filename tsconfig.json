{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "CommonJS",
    "target": "es2022",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "globalTypes"],
  "exclude": ["node_modules", "dist"]
}
